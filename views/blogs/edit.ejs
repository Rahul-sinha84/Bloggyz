<%- include("../partials/header.ejs")  %>
<div class="section-edit-blogs">
    <div class="container-edit">
        <div class="container-edit__text">
            <% if(blogs.title.length >= 30 ){ %>
                Edit "<%= blogs.title.substring(0,30) %>..."
            <% }else{ %>    
            Edit "<%= blogs.title %>"
            <% } %>
        </div>
        <form action="/blogs/<%= blogs._id %>?_method=PUT" method="POST">
            <input type="text" id="title" value="<%= blogs.title %>" class="container-edit__inner" name="blogs[title]" required>
            <label for="title">Title</label>

            <input type="text" id="image" value="<%= blogs.image %>" class="container-edit__inner" name="blogs[image]" required>
            <label for="image">Image URL</label>
            
            <textarea name="blogs[about]" id="about" class="container-edit__inner" rows="5" cols="100" required><%= blogs.about %></textarea>
            <label for="about">Your Content...</label>

            <button type="submit" class="submit-button-edit">Submit</button>
            <p class="link-paragraph">
                Go back to <a href="/blogs/<%=blogs._id%>" class="btn-link">blog</a>
            </p>
        </form>
    </div>
    
</div>


<%- include("../partials/footer.ejs")  %>